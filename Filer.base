formulas:
  frequency: ""
  custom_formula: (date(today())-date(file.ctime)).days.floor()
properties:
  file.mtime:
    displayName: modified_time
views:
  - type: table
    name: Table
    filters:
      and:
        - file.folder.contains("Notes")
    order:
      - file.name
      - file.size
      - file.folder
      - file.mtime
      - formula.custom_formula
    sort:
      - property: file.size
        direction: ASC
      - property: formula.custom_formula
        direction: ASC
    columnSize:
      file.mtime: 243
  - type: cards
    name: View
    sort:
      - property: file.ctime
        direction: DESC
    image: note.cover
    cardSize: 290
    imageFit: contain
    imageAspectRatio: 0.7
